<CreateAccountWindow>:
    name: "create"

    username: username
    email: email
    password: password

    FloatLayout:
        cols: 1

        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "Create an Account"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                text: "Name: "
                size_hint: 0.5, 0.12
                pos_hint: {"x":0, "top":0.8}
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                id: username
                font_size: (root.width**2 + root.height**2) / 13**4
                multiline: False
                pos_hint: {"x": 0.5, "top": 0.8}
                size_hint: 0.4, 0.12
                    
            Label:
                text: "Email: "
                size_hint: 0.5, 0.12
                pos_hint: {"x":0, "top":0.8-0.13}
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                id: email
                font_size: (root.width**2 + root.height**2) / 14**4
                multiline: False
                pos_hint: {"x": 0.5, "top": 0.8-0.13}
                size_hint: 0.4, 0.12

            Label:
                text: "Password: "
                size_hint: 0.5, 0.12
                pos_hint: {"x":0, "top":0.8-0.13*2}
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                id: password
                font_size: (root.width**2 + root.height**2) / 14**4
                multiline: False
                password: True
                pos_hint: {"x": 0.5, "top": 0.8-0.13*2}
                size_hint: 0.4, 0.12

        Button:
            pos_hint: {"x": 0.3, "y": 0.25}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Already have an account? Log In"
            on_release:
                root.manager.transition.direction = "left"
                root.login() 

        Button:
            pos_hint: {"x": 0.2, "y": 0.05}
            size_hint: 0.6, 0.15
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Submit"
            on_release:
                root.manager.transition.direction = "left"
                root.submit() 


<LoginWindow>:
    name: "login"

    email: email
    password: password

    FloatLayout:

        Label:
            text:"Email: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x": 0.45, "top": 0.9}
            size_hint: 0.35, 0.15

        TextInput:
            id: email
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x": 0.45, "top": 0.9}
            size_hint: 0.4, 0.15

        Label:
            text:"Password: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x": 0.45, "top": 0.7}
            size_hint: 0.35, 0.15

        TextInput:
            id: password
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            password: True
            pos_hint: {"x": 0.45, "top": 0.7}
            size_hint: 0.4, 0.15

        Button:
            pos_hint: {"x": 0.2, "top": 0.05}
            size_hint: 0.6, 0.2
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Login"
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

        Button:
            pos_hint: {"x": 0.3, "top": 0.3}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Create Account"
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()

<MainWindow>:
    n: n
    email: email
    created: created

    FloatLayout:
        Label:
            id: n
            pos_hint: {"x": 0.1, "top": 0.9}
            size_hint: 0.8, 0.2
            text: "Account Name: "

        Label:
            id: email
            pos_hint: {"x": 0.1, "top": 0.7}
            size_hint: 0.8, 0.2
            text: "Email: "

        Label:
            id: created
            pos_hint: {"x": 0.1, "top": 0.5}
            size_hint: 0.8, 0.2
            text: "Created: "

        Button:
            pos_hint: {"x": 0.2, "top": 0.1}
            size_hint: 0.6, 0.2
            text: "Log Out"
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "down"